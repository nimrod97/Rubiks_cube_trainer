<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    tools:context=".fragments.StatsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/stats_title"
            android:layout_width="350dp"
            android:layout_height="51dp"
            android:background="@color/cardview_dark_background"
            android:text="Game Statistics"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.041" />

        <Button
            android:id="@+id/gamesOfOthers"
            android:layout_width="275dp"
            android:layout_height="49dp"
            android:text="Last games of other users"
            android:background="@drawable/custom_button"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/mostPlaying"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/myLastGame"
            app:layout_constraintVertical_bias="0.368" />

        <Button
            android:id="@+id/solved_myself"
            android:layout_width="275dp"
            android:layout_height="49dp"
            android:text="Cubes that solved by myself"
            android:background="@drawable/custom_button"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/toughest_cubes"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mostPlaying"
            app:layout_constraintVertical_bias="0.63" />

        <Button
            android:id="@+id/toughest_cubes"
            android:layout_width="275dp"
            android:layout_height="49dp"
            android:text="Toughest cubes to solve"
            android:background="@drawable/custom_button"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/solved_myself"
            app:layout_constraintVertical_bias="0.804" />

        <Button
            android:id="@+id/myLastGame"
            android:layout_width="275dp"
            android:layout_height="49dp"
            android:background="@drawable/custom_button"
            android:text="My last Games"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/stats_title"
            android:layout_marginTop="30dp"/>

        <Button
            android:id="@+id/mostPlaying"
            android:layout_width="275dp"
            android:layout_height="49dp"
            android:text="Who played the most?"
            android:background="@drawable/custom_button"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/solved_myself"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gamesOfOthers" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</RelativeLayout>